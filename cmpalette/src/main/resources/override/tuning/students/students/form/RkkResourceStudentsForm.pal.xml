<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <directories>
    <by-key name="${speciality:Специальность}" id="speciality" key="Специальность"/>
    <by-key name="${group:Группа}" id="group" key="Группа"/>
  </directories>
  <form schema-ref="RkkResourceStudents" id="RkkResourceStudentsForm" projection="default" showtabs="true">
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="edit"/>
        <negative-condition-ref ref="read"/>
      </hide>
    </properties>
    <appearance widget="tabs"/>
    <component>
      <section id="Header">
        <component>
          <section id="row1" group="true">
            <appearance>
              <alt-appearancies>
                <alt-appearance>
                  <appearance-ref ref="horizontalSection"/>
                  <enable condition-union="AND">
                    <condition>true</condition>
                  </enable>
                </alt-appearance>
              </alt-appearancies>
            </appearance>
            <component>
              <field attribute-ref="showIdent">
                <properties>
                  <read-only condition-union="AND">
                    <condition>true</condition>
                  </read-only>
                </properties>
                <appearance align="left" importance="normal">
                  <label-style field-width="15" field-unit="symbol"/>
                  <alt-appearancies>
                    <alt-appearance>
                      <appearance-ref ref="css_headerElementWithIcon"/>
                      <enable condition-union="AND">
                        <condition>true</condition>
                      </enable>
                    </alt-appearance>
                  </alt-appearancies>
                </appearance>
              </field>
            </component>
          </section>
          <field attribute-ref="inputHeaderWithOutPlus">
            <properties>
              <require condition-union="AND">
                <condition>true</condition>
              </require>
              <hide condition-union="AND">
                <negative-condition-ref ref="read"/>
              </hide>
            </properties>
            <appearance importance="normal">
              <label-style>
                <style id="tunFontSize14"/>
                <style id="tunClickableUnderline"/>
              </label-style>
              <field-style>
                <value-style>
                  <style id="tunFontSize14"/>
                  <style id="tunClickableUnderline"/>
                </value-style>
              </field-style>
            </appearance>
            <hint-in-field>${ui.form.RkkResourceInternalForm.section.Header.field.titleHeader.hintInField:Введите заголовок документа}</hint-in-field>
          </field>
          <field attribute-ref="inputHeaderWithOutPlus">
            <properties>
              <require condition-union="AND">
                <condition>true</condition>
              </require>
              <hide condition-union="AND">
                <negative-condition-ref ref="edit"/>
              </hide>
            </properties>
            <appearance importance="normal">
              <label-style>
                <style id="tunFontSize14"/>
              </label-style>
              <field-style>
                <value-style>
                  <style id="tunFontSize14"/>
                </value-style>
              </field-style>
            </appearance>
            <hint-in-field>${ui.form.RkkResourceInternalForm.section.Header.field.titleHeader.hintInField:Введите заголовок документа}</hint-in-field>
          </field>
        </component>
      </section>
      <section id="Attributes" name="${ui.form.RkkResourceInternalForm.section.Attributes.name:Студент}">
        <component>
              <section id="geniral" group="true">
                <component>
                  <field attribute-ref="nameFull" name="${nameFull:ФИО:}">
                    <appearance>
                      <label-style field-width="400" field-unit="px">
                        <style id="tunBorderedField"/>        <!-- Поле в рамке -->
                      </label-style>
                    </appearance>
                    <properties>
                      <require condition-union="AND">
                        <condition>true</condition>
                      </require>
                    </properties>
                  </field>
                  <field attribute-ref="birthDate" name="${birthDate:Дата рождения:}">
                    <appearance>
                      <label-style field-width="400" field-unit="px">
                        <style id="tunBorderedField"/>        <!-- Поле в рамке -->
                      </label-style>
                    </appearance>
                    <properties>
                      <require condition-union="AND">
                        <condition>true</condition>
                      </require>
                    </properties>
                  </field>
                  <field attribute-ref="startDate" name="${startDate:Дата поступления:}">
                    <appearance>
                      <label-style field-width="400" field-unit="px">
                        <style id="tunBorderedField"/>        <!-- Поле в рамке -->
                      </label-style>
                    </appearance>
                    <properties>
                      <require condition-union="AND">
                        <condition>true</condition>
                      </require>
                    </properties>
                  </field>
                  <field attribute-ref="group" name="${group:Группа:}">
                    <appearance>
                      <label-style field-width="400" field-unit="px">
                        <style id="tunBorderedField"/>        <!-- Поле в рамке -->
                      </label-style>
                    </appearance>
                    <directories>
                      <directory-ref ref="group"/>
                    </directories>
                    <properties>
                      <require condition-union="AND">
                        <condition>true</condition>
                      </require>
                    </properties>
                </field>
                  <field attribute-ref="course" name="${course:Курс:}">
                  <appearance>
                    <label-style field-width="400" field-unit="px">
                      <style id="tunBorderedField"/>        <!-- Поле в рамке -->
                    </label-style>
                  </appearance>
                    <properties>
                      <require condition-union="AND">
                        <condition>true</condition>
                      </require>
                    </properties>
                </field>
                  <field attribute-ref="speciality" name="${speciality:Специальность:}">
                    <appearance>
                      <label-style field-width="400" field-unit="px">
                        <style id="tunBorderedField"/>        <!-- Поле в рамке -->
                      </label-style>
                    </appearance>
                    <directories>
                      <directory-ref ref="speciality"/>
                    </directories>
                    <properties>
                      <require condition-union="AND">
                        <condition>true</condition>
                      </require>
                    </properties>
                  </field>
                </component>
              </section>
        </component>
      </section>
    </component>
  </form>
</ui>